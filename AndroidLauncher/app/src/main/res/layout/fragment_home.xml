<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    tools:context="it15225.launcher.android.androidlauncher.Home">


    <ImageView
        android:id="@+id/app_icon_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/app_name_1" />

    <TextView
        android:id="@+id/app_name_1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/app_icon_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/app_name_2"
        android:layout_toRightOf="@+id/app_name_1" />

    <TextView
        android:id="@+id/app_name_2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/app_name_1"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/app_icon_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/app_name_3"
        android:layout_toRightOf="@+id/app_name_2" />

    <TextView
        android:id="@+id/app_name_3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/app_name_2"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/app_icon_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/app_name_4"
        android:layout_toRightOf="@+id/app_name_3" />

    <TextView
        android:id="@+id/app_name_4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/app_name_3"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>
